{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "node",
		"noImplicitAny": false,
		"removeComments": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "dist",
		"resolveJsonModule": true,
		"declaration": true
	},
	"allowSyntheticDefaultImports": true,
	"esModuleInterop": true,
	"resolveJsonModule": true,
	"include": ["src/**/*.ts"],
	"exclude": ["src/**/*.spec.ts", "node_modules"]
}
